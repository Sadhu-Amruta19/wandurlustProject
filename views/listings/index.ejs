<% layout("/layouts/boilerplate.ejs") %>

<body>
    <h3>All listings</h3>
    <!-- <form action="/listings/new" method="get">
        <button>Create New</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for (let listing of allListings){ %>
    <!-- card view for listings: -->
        <a href="/listings/<%=listing.id%>" class="listing-link">

            <div class="card col">
                <img src=<%=listing.image%> class="card-img-top" alt="..." style="height: 18rem;">
                <div class="card-img-overlay">abcd</div>   <!-- To create card interactive.-->
            <div class="card-body">
                <p class="card-text">
                <%=listing.title%> <br>
                <b>&#8377;<%=listing.price.toLocaleString("en-IN")%></b>/ night
                </p>
            </div>
            </div>

        </a>

        <%}%>
    </div>

  
</body>
